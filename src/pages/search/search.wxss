/* pages/select.wxss */
page{background:#000;}
.wrap{padding:40rpx 0;}

.playlist_tit{position:relative;display:block;color:#EFDCB7;font-size:38rpx;margin:20rpx 40rpx 40rpx;padding-bottom:10rpx;font-weight:bold;}
.playlist_tit::after{content:"";position:absolute;bottom:0;left:0;width:76rpx;border-bottom:6rpx solid #efdcb7;}
.playlist{padding:0 20rpx;}
.playlist__item{display:inline-block;width:50%;box-sizing:border-box;padding:0 20rpx 30rpx;}
.playlist__cover{position:relative;width:320rpx;height:320rpx;border-radius:8rpx;overflow:hidden;margin-bottom:18rpx;}
.playlist__mask{position:absolute;top:0;left:0;width:100%;height:100%;background:rgba(0,0,0,.2);display:flex;justify-content:center;align-items:center;}
.playlist__icon{width:92rpx;height:88rpx;}
.playlist__btn_add{position:absolute;bottom:20rpx;right:20rpx;width:46rpx;height:56rpx;border-radius:10rpx;background:rgba(0,0,0,.9);display:flex;justify-content:center;align-items:center;}
.playlist__icon_add{width:38rpx;height:38rpx;}
.playlist__img{position:absolute;top:0;left:0;width:100%;height:100%;}
.playlist__txt{color:#fff;text-overflow:ellipsis;overflow:hidden;white-space:nowrap;font-size:28rpx;}

/* 搜索 */
.mod_search{position:relative;background:rgba(255,255,255,.08);border-radius:4rpx;margin:30rpx 40rpx 10rpx;font-size:28rpx;height:68rpx;line-height:68rpx;}
.search__label{position:absolute;left:207rpx;top:0;color:rgba(255,255,255,.3);}
.search__img{width:26rpx;height:28rpx;margin-right:12rpx;vertical-align:middle;}
.result_tit{display:block;font-size:28rpx;color:rgba(255,255,255,.4);border-bottom:1rpx solid rgba(255,255,255,.2);padding-left:28rpx;line-height:80rpx;}
.songlist{color:#fff;width:100%;padding:0 40rpx 40rpx;box-sizing:border-box;}
.songlist__item{position:relative;display:flex;align-items:center;padding:19rpx 0 17rpx 0;}
.songlist__item::after{content:'';position:absolute;bottom:0;left:0;width:100%;height:0;border-bottom:1rpx solid rgba(255,255,255,.2);}
.songlist__play{background:transparent;width:48rpx;height:48rpx;margin-right:20rpx;}
.songlist__play_img,
.songlist__pause_img{position:absolute;top:0;left:0;width:48rpx;height:48rpx;}
.songlist__pause_img{display:none;}
.songlist__body{flex:1;}
.songlist__tit,
.songlist__desc{display:block;overflow:hidden;white-space:nowrap;text-overflow:ellipsis;max-width:480rpx;}
.songlist__tit{font-size:28rpx;}
.songlist__desc{font-size:24rpx;opacity:.5;}
.songlist__btn{width:120rpx;height:50rpx;line-height:50rpx;background:rgba(255,255,255,.15);color:#fff;border-radius:25rpx;font-size:24rpx;}
/* 播放态 */
.songlist__item.play{color:#31c27c;}
.songlist__item.play .songlist__play_img{display:none;}
.songlist__item.play .songlist__pause_img{display:block;}
/* 无版权 */
.songlist__item.disabled{opacity:.3;}
.songlist__item.disabled .songlist__desc{opacity:1;}
.songlist__item.disabled .songlist__btn{background:rgba(255,255,255,.3);}